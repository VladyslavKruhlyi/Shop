@model Shop.Data.Models.Phone
<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Image" alt="@Model.Name" />
    <h2>Model: @Model.Name</h2>
    <p>@Model.ShortDescription</p>
    <p>Price: @Model.Price.ToString("c")</p>
    <p><a class="btn btn-warning" asp-controller="ShopCart" asp-action="AddToCart" asp-route-id="@Model.Id" >Add in cart</a> </p>
</div>